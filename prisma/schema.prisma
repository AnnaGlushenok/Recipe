generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int     @id @default(autoincrement())
  category_id Int
  name        String  @unique
  img_path    String
  ingredients String
  technology  String
  notes       String?

  category Category @relation(fields: [category_id], references: [id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique

  recipes Recipe[]
}
